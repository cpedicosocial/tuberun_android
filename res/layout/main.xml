<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:background="#99000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >
            
            <Button android:id="@+id/button_logo" android:layout_width="40dip"
				android:layout_height="40dip" android:text="" style="@style/LogoButton"
				android:layout_weight="0" android:gravity="center" android:layout_gravity="center" 
				 />
			<TextView android:id="@+id/lastupdate"
			    android:layout_marginLeft="5dip"
				android:layout_height="wrap_content" android:text="TubeRun"
				android:layout_width="fill_parent" android:layout_weight="5"
				style="@android:style/TextAppearance.Medium" 
				android:gravity="left|center_vertical" android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/layout_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bubble"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ProgressBar
                    android:id="@+id/progressbar_balance"
                    style="@android:style/Widget.ProgressBar.Small.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/view_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#00a1f5"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/button_oyster"
                style="@style/OysterButton"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_gravity="center_vertical|right"
                android:text="" />

            <Button
                android:id="@+id/button_oyster_active"
                style="@style/OysterButtonActive"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_gravity="center_vertical|right"
                android:text=""
                android:visibility="gone" />

            <Button
                android:id="@+id/button_favorites"
                style="@style/FavoriteNormalButton"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_gravity="center_vertical|right"
                android:text="" />
        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dip"
            android:gravity="bottom"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" 
            android:stretchColumns="*"
            android:shrinkColumns="*"  >

            <TableRow android:layout_height="fill_parent" android:layout_weight="25.0"/>
            
            <TableRow android:layout_height="fill_parent" android:layout_weight="0.5">

                <Button
                    android:id="@+id/button_status"
                    android:layout_gravity="center_vertical"
                    android:minHeight="70dip"
                    android:maxHeight="80dip"
                    android:height="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/status_title"
                    android:width="120dip" />

                <Button
                    android:id="@+id/button_departures"
                    android:layout_gravity="center_vertical"
                    android:minHeight="70dip"
                    android:maxHeight="80dip"
                    android:height="0dp"
                    android:layout_height="fill_parent"
                    android:text="@string/departures_title"
                    android:width="120dip" />
            </TableRow>

            <TableRow android:layout_height="fill_parent" android:layout_weight="0.5">

                <Button
                    android:id="@+id/button_nearby"
                    android:layout_gravity="center_vertical"
                    android:minHeight="70dip"
                    android:maxHeight="80dip"
                    android:layout_height="fill_parent"
                    android:singleLine="false"
                    android:text="@string/nearby_title" />

                <Button
                    android:id="@+id/button_maps"
                    android:layout_gravity="center_vertical"
                    android:minHeight="70dip"
                    android:maxHeight="80dip"
                    android:layout_height="fill_parent"
                    android:text="@string/maps_title" />
            </TableRow>

            <TableRow android:layout_height="fill_parent" android:layout_weight="0.5">

                <Button
                    android:id="@+id/button_planner"
                    android:layout_gravity="center_vertical"
                    android:minHeight="70dip"
                    android:maxHeight="80dip"
                    android:layout_height="fill_parent"
                    android:singleLine="false"
                    android:text="@string/planner_title" />

                <Button
                    android:id="@+id/button_claims"
                    android:layout_gravity="center_vertical"
                    android:minHeight="70dip"
                    android:maxHeight="80dip"
                    android:layout_height="fill_parent"
                    android:singleLine="false"
                    android:text="@string/claims_title" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</FrameLayout>