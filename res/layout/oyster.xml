<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<ImageView android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:src="@drawable/background_oyster"
		android:scaleType="centerCrop" />

	<LinearLayout android:layout_width="fill_parent" android:background="#99000000"
			android:layout_height="wrap_content" android:orientation="horizontal">

		    <Button android:id="@+id/back"
		        android:layout_width="wrap_content"
				android:layout_height="wrap_content" style="@style/BackButton"
				android:layout_gravity="center_vertical" />
		    <Button android:id="@+id/button_logo" android:layout_width="40dip"
				android:layout_height="40dip" android:text="" style="@style/LogoButton"
				android:layout_weight="0" 
				 />
			<TextView android:id="@+id/lastupdate"
			    android:layout_marginLeft="5dip"
				android:layout_height="wrap_content" android:text="Oyster Balance"
				android:layout_width="fill_parent" android:layout_weight="5"
				style="@android:style/TextAppearance.Medium" 
				android:gravity="left" />
		</LinearLayout>
	
	<LinearLayout android:id="@+id/mainmenu" 
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:gravity="center_vertical"
		android:layout_marginBottom="10dip" android:weightSum="1">
		
		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="#99000000"
		    android:orientation="vertical"
		    android:padding="10px" >

			<TextView android:layout_width="fill_parent" style="@style/WhiteText"
				android:layout_height="wrap_content" android:text="Add your oyster.tfl.gov.uk credentials:" />

			<LinearLayout android:orientation="horizontal"
				android:paddingLeft="10dip" android:paddingRight="15dip"
				android:paddingTop="5dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_height="wrap_content" android:layout_width="100dip"
					android:layout_gravity="center_vertical" style="@style/WhiteText"
					android:text="Username" />
				<EditText android:id="@+id/oyster_username"
				    android:singleLine="true"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_gravity="center_vertical|right" />
			</LinearLayout>

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="wrap_content">

				<LinearLayout android:id="@+id/list"
					android:orientation="horizontal" android:paddingLeft="10dip"
					android:paddingRight="15dip" android:paddingTop="5dip"
					android:layout_width="fill_parent" android:layout_height="wrap_content">
					<TextView android:textAppearance="?android:attr/textAppearanceSmall"
						android:layout_height="wrap_content" android:layout_width="100dip"
						android:layout_gravity="center_vertical" style="@style/WhiteText"
						android:text="Password" />
					<EditText android:id="@+id/oyster_password"
					    android:singleLine="true"
						android:inputType="textPassword" android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:layout_gravity="center_vertical|right" />
				</LinearLayout>

				<Button android:id="@+id/button_store"
					android:layout_gravity="center_horizontal" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_below="@id/list"
					android:layout_alignParentRight="true" android:layout_marginRight="15dip"
					android:layout_marginLeft="10px" android:layout_marginTop="5dip"
					android:text="Save Credentials" />

				<Button android:id="@+id/button_erase"
				    android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_toLeftOf="@id/button_store"
					android:layout_alignTop="@id/button_store" android:text="Erase Credentials" />

			</RelativeLayout>
			
		</LinearLayout>

	</LinearLayout>

</FrameLayout>