<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:id="@+id/menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="48dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Menu" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:layout_gravity="bottom"
                    android:background="@drawable/tuberun_red_bright" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@android:color/black"
                    android:shrinkColumns="1"
                    android:stretchColumns="1" >

                    <TableRow
                        android:id="@+id/status_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/LogoButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/status_title" />
                    </TableRow>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/holo_divider" />

                    <TableRow
                        android:id="@+id/departures_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/LogoButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/departures_title" />
                    </TableRow>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/holo_divider" />

                    <TableRow
                        android:id="@+id/nearby_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/LogoButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/nearby_title" />
                    </TableRow>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/holo_divider" />

                    <TableRow
                        android:id="@+id/map_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/MapButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/maps_title" />
                    </TableRow>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/holo_divider" />

                    <TableRow
                        android:id="@+id/planner_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/LogoButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/planner_title" />
                    </TableRow>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/holo_divider" />

                    <TableRow
                        android:id="@+id/claims_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/LogoButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/claims_title" />
                    </TableRow>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/holo_divider" />

                    <TableRow
                        android:id="@+id/favorites_row"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="10dip" >

                        <Button
                            style="@style/FavoriteButton"
                            android:layout_width="40dip"
                            android:layout_height="40dip"
                            android:layout_gravity="center_vertical"
                            android:text="" />

                        <TextView
                            style="@android:style/TextAppearance.Large"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dip"
                            android:text="@string/favorites_title" />
                    </TableRow>
                </TableLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/layout_oyster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/layout_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bubble"
                        android:orientation="horizontal" >

                        <ProgressBar
                            android:id="@+id/progressbar_balance"
                            style="@android:style/Widget.ProgressBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="5dip"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/view_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#00a1f5"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button_oyster"
                        style="@style/OysterButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="10dip"
                        android:minHeight="0dip"
                        android:minWidth="0dip"
                        android:text="" />

                    <Button
                        android:id="@+id/button_oyster_active"
                        style="@style/OysterButtonActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="10dip"
                        android:minHeight="0dip"
                        android:minWidth="0dip"
                        android:text=""
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_width="2dip"
                android:background="@drawable/tuberun_red_bright" />
        </LinearLayout>
    </ScrollView>

</merge>