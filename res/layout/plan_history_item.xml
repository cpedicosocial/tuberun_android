<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal" android:paddingLeft="5dip">
	<TableLayout 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center" android:stretchColumns="0">
		<TableRow>
			<TextView android:id="@+id/plan_title"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:padding="10dp" android:gravity="left" android:textSize="16sp"
				style="@style/WhiteText">
			</TextView>
			<Button android:id="@+id/add_home_button" android:textOn=""
				android:textOff="" android:layout_width="45dip"
				android:layout_height="45dip" android:layout_gravity="top"
				android:focusable="false" android:focusableInTouchMode="false"
				style="@style/HomeButton" />
		</TableRow>

	</TableLayout>

</LinearLayout>