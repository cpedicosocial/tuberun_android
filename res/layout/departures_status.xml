<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchColumns="0" >

            <TableRow>

                <TextView
                    android:id="@+id/departures_platform"
                    style="@style/WhiteText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:gravity="left"
                    android:textColor="@drawable/tuberun_red_bright"
                    android:textSize="14sp"
                    android:textStyle="bold" >
                </TextView>

                <ToggleButton
                    android:id="@+id/add_favorite"
                    style="@style/FavoriteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:textOff=""
                    android:textOn=""
                    android:minWidth="0dip"
                	android:minHeight="0dip" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/tuberun_red_bright" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/departures_time1"
            style="@style/WhiteText"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="16sp" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/departures_destination1"
                style="@style/WhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/departures_position1"
                style="@style/WhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="14sp"
                android:textColor="@drawable/tuberun_grey" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/departures_time2"
            style="@style/WhiteText"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="16sp" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/departures_destination2"
                style="@style/WhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/departures_position2"
                style="@style/WhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="14sp"
                android:textColor="@drawable/tuberun_grey" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/departures_time3"
            style="@style/WhiteText"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="left"
            android:padding="10dp"
            android:textSize="16sp" >
        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/departures_destination3"
                style="@style/WhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/departures_position3"
                style="@style/WhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:textSize="14sp"
                android:textColor="@drawable/tuberun_grey" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>